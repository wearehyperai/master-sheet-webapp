generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id               Int      @id @default(autoincrement())
  email            String   @unique
  name             String?
  password_hash    String
  auth_token       String?
  access_token     String?
  refresh_token    String?
  joined_timeStamp DateTime @default(now())
}
